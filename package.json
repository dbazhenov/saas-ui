{
  "name": "@percona/platform-ui",
  "version": "0.8.0",
  "description": "Percona Platform Portal UI",
  "private": false,
  "homepage": "https://portal.percona.com",
  "author": "info@percona.com",
  "license": "Apache-2.0",
  "files": [
    "build",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/percona-platform/saas-ui.git"
  },
  "proxy": "https://portal-dev.percona.com",
  "scripts": {
    "start": "react-scripts start",
    "build": "GENERATE_SOURCEMAP=false react-scripts build",
    "eject": "react-scripts eject",
    "test": "react-scripts test --verbose",
    "test:ci": "CI=true react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false --collectCoverageFrom=src/**/*.{ts,tsx,js} --collectCoverageFrom=!src/core/gen/**/*",
    "lint": "eslint --ext js,ts,tsx src",
    "lint:tests": "eslint --ext js,ts cypress --fix",
    "lint:fix": "npm run lint -- --fix",
    "cy:open": "cypress open",
    "cy:run": "cypress run --browser chrome --headless",
    "cy:merge": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/report.json",
    "cy:report": "marge cypress/reports/*.json -f report -o cypress/reports/",
    "report:copyScreenshots": "cp -r cypress/screenshots cypress/reports",
    "report:copyVideos": "cp -r cypress/videos cypress/reports",
    "generate:report": "npm run cy:merge; npm run report:copyScreenshots; npm run report:copyVideos; npm run cy:report"
  },
  "dependencies": {
    "@grafana/data": "7.5.7",
    "@grafana/ui": "7.5.7",
    "@okta/okta-auth-js": "^5.9.1",
    "@okta/okta-react": "^6.3.0",
    "@okta/okta-signin-widget": "^6.1.2",
    "@percona/platform-core": "^0.12.3",
    "@reduxjs/toolkit": "^1.8.2",
    "@sentry/react": "^6.19.6",
    "@sentry/tracing": "^6.19.6",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^12.1.3",
    "@types/d3": "^7.1.0",
    "@types/history": "^4.7.8",
    "@types/jest": "^24.0.0",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.1",
    "@types/react-router-dom": "^5.1.5",
    "@types/react-table": "^7.7.8",
    "axios": "^0.26.1",
    "connected-react-router": "^6.8.0",
    "d3": "^7.4.4",
    "emotion": "^10.0.27",
    "final-form": "^4.20.1",
    "final-form-arrays": "^3.0.2",
    "history": "4.7.2",
    "prettier": "^2.5.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-final-form": "^6.5.1",
    "react-final-form-arrays": "^3.1.3",
    "react-popper": "^2.2.5",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-table": "^7.7.0",
    "react-toastify": "^6.0.8",
    "redux": "^4.0.5",
    "typescript": "^4.1.2"
  },
  "overrides": {
    "@grafana/data": {
      "marked": "4.0.10"
    }
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^5.6.0",
    "@playwright/test": "1.25.0",
    "@testing-library/cypress": "^8.0.3",
    "@types/faker": "^5.1.2",
    "@types/node": "^16.11.7",
    "@types/react-redux": "^7.1.9",
    "cypress": "^9.2.0",
    "cypress-cy-select": "^0.2.2",
    "cypress-mailosaur": "^2.1.3",
    "cypress-multi-reporters": "^1.4.0",
    "dotenv": "^10.0.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.5.3",
    "generate-password": "^1.6.1",
    "jest-canvas-mock": "^2.2.0",
    "mailosaur": "^8.4.0",
    "mocha": "^8.3.0",
    "mochawesome": "^6.2.2",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^5.2.0"
  },
  "keywords": [
    "percona",
    "portal",
    "ui"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16 <17"
  },
  "bugs": {
    "url": "https://jira.percona.com/browse/SAAS"
  },
  "jest": {
    "moduleNameMapper": {
      "d3": "<rootDir>/node_modules/d3/dist/d3.min.js"
    }
  }
}
